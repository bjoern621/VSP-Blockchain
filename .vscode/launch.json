{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "port",
            "type": "promptString",
            "description": "Port number for the P2P node",
            "default": "50051"
        }
    ],
    "configurations": [
        {
            "name": "Launch P2P-Blockchain",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/p2p-blockchain",
            "env": { "LOG_LEVEL": "DEBUG", "PORT": "${input:port}" },
            "preLaunchTask": "p2p-blockchain: prepare"
        },
        {
            "name": "Launch P2P-Blockchain (Port 50051)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/p2p-blockchain",
            "env": { "LOG_LEVEL": "DEBUG", "PORT": "50051" },
            "preLaunchTask": "p2p-blockchain: prepare"
        },
        {
            "name": "Launch P2P-Blockchain (Port 50052)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/p2p-blockchain",
            "env": { "LOG_LEVEL": "DEBUG", "PORT": "50052" },
            "preLaunchTask": "p2p-blockchain: prepare"
        },
        {
            "name": "Launch P2P-Blockchain (Port 50053)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/p2p-blockchain",
            "env": { "LOG_LEVEL": "DEBUG", "PORT": "50053" },
            "preLaunchTask": "p2p-blockchain: prepare"
        },
        {
            "name": "Launch REST-Schnittstelle",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/rest-schnittstelle",
            "env": { "LOG_LEVEL": "DEBUG" }
        }
    ],
    "compounds": [
        {
            "name": "Launch 3 P2P Peers",
            "configurations": [
                "Launch P2P-Blockchain (Port 50051)",
                "Launch P2P-Blockchain (Port 50052)",
                "Launch P2P-Blockchain (Port 50053)"
            ],
            "stopAll": true
        }
    ]
}
